{
  "data": {
    "raw_data_path": "data/TMDB_movie_dataset_v11.csv",
    "processed_data_path": "data/processed_movies.csv.gz",
    "chunk_size": 10000,
    "encoding": "utf-8"
  },
  "content_based": {
    "max_features": 10000,
    "ngram_range": [1, 2],
    "min_df": 2,
    "max_df": 0.8,
    "use_svd": true,
    "svd_components": 300,
    "similarity_threshold": 0.1,
    "top_k": 10
  },
  "collaborative": {
    "svd_components": 50,
    "embedding_dim": 64,
    "hidden_dims": [128, 64],
    "learning_rate": 0.001,
    "batch_size": 1024,
    "epochs": 50,
    "min_user_ratings": 5,
    "min_movie_ratings": 3,
    "test_size": 0.2,
    "random_state": 42
  },
  "evaluation": {
    "k_values": [1, 3, 5, 10, 20],
    "relevance_threshold": 4.0,
    "diversity_alpha": 0.5,
    "novelty_percentile": 0.9,
    "statistical_significance": 0.05,
    "min_interactions": 5
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(levelname)s - %(message)s",
    "file": "recommendation_system.log"
  },
  "experiment": {
    "output_dir": "results",
    "save_models": true,
    "save_results": true,
    "enable_profiling": true
  }
}